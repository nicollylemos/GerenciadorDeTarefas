@model GerenciadorTarefasApp.Models.Tarefas

@{
    ViewData["Title"] = "Excluir Tarefa";
}

<h1>Excluir Tarefa</h1>

<h3>Tem certeza que deseja excluir esta tarefa?</h3>
<div>
    <h4>Tarefa</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Titulo)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Titulo)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Descricao)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Descricao)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.DataConclusao)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.DataConclusao)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Conclusao)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Conclusao)
        </dd>
    </dl>
    
    <form asp-action="Delete">
        <input type="hidden" asp-for="Id" />
        <input type="submit" value="Excluir" class="btn btn-danger" /> |
        <a asp-action="Index" class="btn btn-secondary">Voltar para a Lista</a>
    </form>
</div>